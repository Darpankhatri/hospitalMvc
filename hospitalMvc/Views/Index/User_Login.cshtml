
@{
    ViewBag.Title = "User_Login";
    Layout = "~/Views/web/_LayoutPage1.cshtml";
}

<main>

    <!-- Start Page Banner Area -->
    <div class="page-banner-area bg-22 pt-100">
        <div class="container">
            <div class="page-banner-content">
                <h2>My Account</h2>
                <ul>
                    <li>
                        <a href="/Index">
                            <i class="ri-home-8-line"></i>
                            Home
                        </a>
                    </li>
                    <li>
                        <span>Login</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- End Page Banner Area -->
    <!-- Start My Account Area -->
    <div class="my-account-area ptb-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <form class="login-register-form-area login">
                        
                        <h2>Login</h2>
                        <div class="form-group">
                            <input id="login-form-email" type="email" class="form-control" name="email" placeholder="info@bexi.com" required>
                            
                        </div>
                        <div class="form-group">
                            <label>PASSWORD</label>
                            <input id="login-form-password" type="password" class="form-control" name="password" placeholder="******" required>
                            
                        </div>


                        <div class="d-flex align-items-center">
                            <button class="default-btn me-3 login-submit-btn">
                                Login
                            </button>
                            <p>Don’t have an account? <a href="/Index/User_register">Register now</a></p>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
    <!-- End My Account Area -->


</main>

